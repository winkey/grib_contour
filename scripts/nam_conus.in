path="$1"
run="$2"
hour="$3"
prod="$4"
level="$5"
tmp="/tmp"

hour="${hour:1}"

source @PKGDATADIR@/nam_conus.config.sh
source @bindir@/generic2.sh





function thick {
	spath="${path/HGHT.1000/HGHT.${1}}"
	if [[ -f $spath ]]
	then

		diffplot "$spath" "$path" ${1}thk 1 1 20 $hour 03
		
		
	fi
}

function thick2 {
	spath="${path/HGHT.${1}/HGHT.1000}"
	if [[ -f $spath ]]
	then

		diffplot "$path" "$spath" ${1}thk 1 1 20 $hour 03
		
		
	fi
}

##### plot height #####

if [[ "$prod" == "HGHT" ]]
then

	
	plot "$path" "${level}hgt" 1 20 $hour 03 "-H"
	
	##### plot thickness #####
	
	if [[ $level == 1000 ]]
	then
		thick 925
		thick 850
		thick 700
		thick 500
	else
		if [[ $level == 925 || $level == 850 || $level == 700 || $level == 500 ]]
		then
			
			thick2 $level
		fi
	fi
fi

##### plot temp #####

if [[ "$prod" == "TMPK" ]]
then

	
	plot "$path" "${level}t" 1 1 $hour 03

	rm "$path"
fi

##### plot rh #####

if [[ "$prod" == "RELH" ]]
then

	
	plot "$path" "${level}rh" 1 10 $hour 03

	rm "$path"
fi

##### plot wind #####

if [[ "$prod" == "UREL" ]]
then
	vpath=$(echo "$path" | sed s/UREL/VREL/)
	
	if [[ -f "$vpath" ]]
	then

		
		if [[ "$level" -gt "500" ]]
		then
			interval=5
		else
			interval=7
		fi
		
		windplot "$path" "$vpath" "${level}wind" 1.0 1.0 $interval $hour 03

		rm "$path"
		rm "$vpath"
	fi
fi

if [[ "$prod" == "VREL" ]]
then
	upath=$(echo "$path" | sed s/VREL/UREL/)
	
	if [[ -f "$upath" ]]
	then

		
		if [[ "$level" -gt "500" ]]
		then
			interval=5
		else
			interval=7
		fi
		
		windplot "$upath" "$path" "${level}wind" 1.0 1.0 $interval $hour 03
		
		rm "$path"
		rm "$upath"
	fi
fi

##### plot cape #####

if [[ "$prod" == "CAPE" ]]
then

	
	plot "$path" "cape" 1 200 $hour 03
	
	rm "$path"
fi

##### plot pwat #####

if [[ "$prod" == "PWTR" ]]
then

	
	plot "$path" "pwat" 1 4 $hour 03 "-I"
	
	rm "$path"
fi

##### plot percip #####

if [[ "$prod" == "P03M" ]]
then

	
	plot "$path" "pcp" 1 4 $hour 03 "-I"
	
	## WXTS ##
	
	spath=$(echo "$path" | sed s/P03M/WXTS/)
	
	if [[ -f "$spath" ]]
	then

		
		andplot "$path" "$spath" "snow" 1.0 1.0 4 $hour 03 "-I"
		
		rm "$spath"
	fi
	
	## WXTZ ##
	
