	if [[ -f "$zpath" ]]
	then

		
		andplot "$path" "$zpath" "frez" 1.0 1.0 4 $hour 03 "-I"
		
		rm "$zpath"
	fi
	
	## WXTR ##
	
	rpath=$(echo "$path" | sed s/P03M/WXTR/)
	
	if [[ -f "$rpath" ]]
	then

		
		andplot "$path" "$rpath" "rain" 1.0 1.0 4 $hour 03 "-I"
		
		rm "$rpath"
	fi
	
	## WXTP ##
	
	ppath=$(echo "$path" | sed s/P03M/WXTP/)
	
	if [[ -f "$ppath" ]]
	then

		
		andplot "$path" "$ppath" "pellet" 1.0 1.0 4 $hour 03 "-I"
		
		rm "$ppath"
	fi
fi

