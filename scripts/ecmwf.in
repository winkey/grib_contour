##### wind #####

if [[ "$prod" == "UGRD" ]]
then
	vpath=$(echo "$path" | sed s/UGRD/VGRD/)
	
	unset paths i
	for grid in 001 002 003 004 009 010 011 012
	do
		tpath=$(echo "$path" | sed s:/0[0-1][0-9][.]:/$grid.:)
		if [[ -f "$tpath" ]]
		then
			paths[i++]="-u"
			paths[i++]="$tpath"
		fi
	done
	for grid in 001 002 003 004 009 010 011 012
	do
		tpath=$(echo "$vpath" | sed s:/0[0-1][0-9][.]:/$grid.:)
		if [[ -f "$tpath" ]]
		then
			paths[i++]="-v"
			paths[i++]="$tpath"
		fi
	done
		
	if [[ "$i" == "32" ]]
	then

		
		if [[ "$level" -gt "500" ]]
		then
			interval=5
		else
			interval=7
		fi
		
		nice -n 10 grib_contour -w "${paths[@]}" -i $interval -s ${level}wind -k -p "$pg" -r $run -f timee -l $incr

	fi
fi

