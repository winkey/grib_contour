db="ecmwf"

source @bindir@/generic2.sh


path="$1"
grid="$2"
datee="$3"
run="$4"
hour="${5#0}"
prod="$6"
level="$7"
tmp="/tmp"

if [[ "$hour" == "" ]]
then
	hour="00"
fi




##### plot height #####

if [[ "$prod" == "HGT" ]]
then
	
	unset paths i
	for grid in 001 002 003 004 009 010 011 012
	do
		tpath=$(echo "$path" | sed s:/0[0-1][0-9][.]:/$grid.:)
		if [[ -f "$tpath" ]]
		then
			paths[i++]="-g"
			paths[i++]="$tpath"
		fi
	done
	
	if [[ "$i" == "16" ]]
	then

		
		nice -n 10 grib_contour "${paths[@]}" -i 20 -s ${level}hgt -p "$pg" -r $run -f timee -l $incr

	fi
fi

##### plot temp #####

