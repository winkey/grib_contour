path="$1"
run="$2"
hour="$3"
prod="$4"
level="$5"
tmp="/tmp"

source @PKGDATADIR@/ww3.config.sh
source @bindir@/generic2.sh





period="03"

hour=${hour#0}



##### plot hght of wind waves #####

if [[ "$prod" == "wnd_wav_ht" ]]
then

	plot "$path" "hghtww" 1 .5 $hour $period
fi

##### Mean period of wind waves #####

if [[ "$prod" == "wnd_wav_per" ]]
then

	plot "$path" "perdww" 1 1 $hour $period
fi

##### Sig hght of comb wind waves/swell #####

if [[ "$prod" == "sig_wav_ht" ]]
then

	plot "$path" "htsgw" 1 .5 $hour $period
fi

##### swell wave height #####

if [[ "$prod" == "swl_wav_ht" ]]
then

	plot "$path" "hghtswl" 1 .5 $hour $period
fi

##### swell wave period #####

if [[ "$prod" == "swl_wav_per" ]]
then

	plot "$path" "perdswl" 1 1 $hour $period
fi


rm "$path"
