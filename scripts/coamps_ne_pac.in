path="$1"
run="$2"
hour="$3"
prod="$4"
level="$5"
tmp="/tmp"

hour=${hour#0}

source @PKGDATADIR@/coamps_ne_pac.config.sh
source @bindir@/generic2.sh








function thick {
	spath="${path/1000.geop_ht/${1}.geop_ht}"
	if [[ -f $spath ]]
	then

		diffplot "$spath" "$path" ${1}thk 1 1 20 $hour 06
		
		
	fi
}

function thick2 {
	spath="${path/${1}.geop_ht/1000.geop_ht}"
	if [[ -f $spath ]]
	then
		diffplot "$path" "$spath" ${1}thk 1 1 20 $hour 06
		
		
	fi
}

##### plot height #####

if [[ "$prod" == "geop_ht" ]]
then

	plot "$path" "${level}hgt" 1 20 $hour 06 "-H"
	
	##### plot thickness #####
	
	if [[ $level == 1000 ]]
	then
		thick 925
		thick 850
		thick 700
		thick 500
	else
		if [[ $level == 925 || $level == 850 || $level == 700 || $level == 500 ]]
		then
			
			thick2 $level
		fi
	fi
fi

##### plot temp #####

if [[ "$prod" == "air_temp" ]]
then
	plot "$path" "${level}t" 1 1 $hour 06
	rm "$path"
fi

##### plot rh #####

if [[ "$prod" == "rltv_hum" ]]
then

	plot "$path" "${level}rh" 1 10 $hour 06
	rm "$path"
fi

##### plot wind #####

if [[ "$prod" == "wnd_ucmp" ]]
then
	vpath=$(echo "$path" | sed s/wnd_ucmp/wnd_vcmp/)
	
	if [[ -f "$vpath" ]]
	then

		if [[ "$level" -gt "500" ]]
		then
			interval=5
		else
			interval=7
		fi
		windplot "$path" "$vpath" "${level}wind" 1.0 1.0 $interval $hour 06

		rm "$path"
		rm "$vpath"
	fi
fi

if [[ "$prod" == "wnd_vcmp" ]]
then
	upath=$(echo "$path" | sed s/wnd_vcmp/wnd_ucmp/)
	
	if [[ -f "$upath" ]]
	then

		if [[ "$level" -gt "500" ]]
		then
			interval=5
		else
			interval=7
		fi
		windplot "$upath" "$path" "${level}wind" 1.0 1.0 $interval $hour 06
		
		rm "$path"
		rm "$upath"
	fi
fi

	
##### plot percip #####

 if [[ "$prod" == "ttl_prcp" ]]
then

	if [[ "$hour" == "03" ]]
	then
		mkrootkml "pcp"
	fi
	plot "$path" "pcp" 1 4 $hour 06 "-I"
	

fi


#### plot pmsl #####

if [[ "$prod" == "pres" ]] && [[ "$level" == "0" ]]
then

	plot "$path" "pmsl" 1 200 $hour 06 "-H"
	rm "$path"
fi




