db="ocean"

source @bindir@/generic2.sh

wwwdisk="@wwwdisk@/kml/ocean"
www="@www@/kml/ocean"

path="$1"
run="$2"
hour="$3"
prod="$4"
level="$5"
tmp="/tmp"

period="12"

hour=${hour#0}

if [[ ! -d "${wwwdisk}/${run}" ]]
then
	mkdir -p "${wwwdisk}/${run}"
fi

##### sst #####

if [[ "$prod" == "sea_temp" ]]
then
	mkrootkml sst
	plot "$path" "sst" 1 .5 $hour $period
fi

##### ice coverage #####

if [[ "$prod" == "ice_cvrg" ]]
then
	mkrootkml ice
	plot "$path" "ice" 1 1 $hour $period
fi

